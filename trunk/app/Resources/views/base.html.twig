{% import '::helpers.html.twig' as helper %}
<html xmlns:fb="http://www.facebook.com/2008/fbml">
    <head>
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
            <link rel="icon" href="{{ asset('favicon.ico') }}" />
            {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('css/reset.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('css/frontend/fonts.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('css/frontend/main.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('css/frontend/form.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('css/frontend/buttons.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('js/fancybox/jquery.fancybox-1.3.4.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('css/footer-lang-dialog.css') }}" type="text/css" />
                <link rel="stylesheet" href="{{ asset('/plugins/jquery-ui-1.9.1.custom/css/custom-theme/jquery-ui-1.9.1.custom.min.css') }}" type="text/css" />
            {% endblock %}
            {% block javascripts %}
                <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/fancybox/jquery.mousewheel-3.0.4.pack.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/fancybox/jquery.fancybox-1.3.4.js') }}"></script>
                <script type="text/javascript" src="{{ asset('plugins/jquery-ui-1.9.1.custom/js/jquery-ui-1.9.1.custom.min.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
                <script type="text/javascript" src="{{ asset('js/footer-lang-dialog.js') }}"></script>
                <script type="text/javascript">
                $(document).ready(function() {
                    $("a#foot-terms").fancybox({
                        type: 'iframe',
                        href: '{{ path('fenchy_frontend_terms_popup') }}',
                        width: 900,
                        height: 550
                    });
                    
                    $("a#foot-privacy").fancybox({
                        type: 'iframe',
                        href: '{{ path('fenchy_frontend_privacy_popup') }}',
                        width: 900,
                        height: 550
                    });
                });
                </script>
                
            {% endblock %}
                
            {% block plugins %}
                <link rel="stylesheet" href=" {{ asset('plugins/pretty_photo/css/prettyPhoto.css') }}" type="text/css" media="screen" title="prettyPhoto main stylesheet" charset="utf-8" />
                <script src="{{ asset('plugins/pretty_photo/js/jquery.prettyPhoto.js') }}" type="text/javascript" charset="utf-8"></script>
            {% endblock %}
            <title>{% block title %}{{ 'main.title_suffix'|trans }}{% endblock %}</title>
    </head>
    <body>
        {% block header %}
            
        {% endblock %}
        <div id="sitebody">
            
            {% block body %}
                <div id="positive_msg" class="flash-container">
                    {% block positive_msg %}
                        {% set flash = app.session.flash('positive') %}
                        {% if flash|length > 0 %}
                            <span>{{ flash|trans }}</span>
                        {% endif %}
                    {% endblock %}
                </div>
                <div id="negative_msg" class="flash-container">
                    {% block negative_msg %}
                        {% set flash = app.session.flash('negative') %}
                        {% if flash|length > 0 %}
                            <span>{{ flash|trans }}</span>
                        {% endif %}
                    {% endblock %}
                </div>
                <div id="content">
                    {% block content %}
                        
                    {% endblock %}
                </div>
                
            {% endblock %}
        </div>
        <div id="foot">
            {% block foot %}
               
            {% endblock %}
        </div>
    </body>
</html>