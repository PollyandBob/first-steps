{% extends "UserBundle::layout.html.twig" %}

{% block content_inner %}

    {% block fos_user_content %}
    <div class="password-reset-form">
        <header>
            <h1>{{'user.password_reset.name'|trans}}</h1>
        </header>
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-box-wrapper">
                <div class="error">
                    {% if invalid_username is defined %}
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                    {% endif %}
                </div>
                <div class="row input-wrapper">
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-element">
                        <input type="email" id="username" name="username" required="required" />
                    </div>                    
                </div>
            </div>            
            <footer class="clearfix">
                <div class="button grey-button pull-left" id="buttons">
                    <a id="back" class="wrapper" href="{{ path('fenchy_user_login') }}">
                        <strong>{{ 'user.back_to_login'|trans }}</strong>
                    </a>                            
                </div>
                <div class="button submit pull-right">
                    <div>
                        <input type="submit" id="continue" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}"/>                                
                    </div>
                </div>
            </footer>             
        </form>
    </div>
    {% endblock %}

{% endblock %}
