{% block body_html %}
<html>
    <body style="font-family: MYRIADPRO-REGULAR, sans-serif;">
        <center>
            <img src="{{ absolute(asset('images/logo.png')) }}" alt="Fenchy logo" style="margin: 100px 0 50px" />
            <p style="font-size: 20px;">{{ 'invitation.email.message.1'|trans({'%username%': username}, 'FOSUserBundle') }}</p>
            <br /><br />
            <table>
                <tr height="60px"><td></td><td style="background-color: #271e01; margin: 20px;">
                    <a href="{{ url('fenchy_frontend_homepage') }}" style="
                        color:white;
                        background-repeat: repeat-x;
                        /* Safari 4-5, Chrome 1-9 */
                        background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#3e3a2e), to(#271e01));
                        /* Safari 5.1, Chrome 10+ */
                        background: -webkit-linear-gradient(top, #3e3a2e, #271e01);
                        /* Firefox 3.6+ */
                        background: -moz-linear-gradient(top, #3e3a2e, #271e01);
                        /* IE 10 */
                        background: -ms-linear-gradient(top, #3e3a2e, #271e01);
                        /* Opera 11.10+ */
                        background: -o-linear-gradient(top, #3e3a2e, #271e01);
                        background-color: #271e01;
                        width:auto;
                        font-size:20px;
                        text-decoration: none;
                        font-weight: bold;
                        padding:20px 30px;
                        -moz-border-radius: 5px;
                        -webkit-border-radius: 5px;
                        border-radius: 5px;
                    ">{{ 'invitation.email.button_name'|trans({}, 'FOSUserBundle') }}</a>
                </td><td></td></tr>
            </table>
            <br /><br />
            <p>{{ 'registration.email.message.3.html'|trans({}, 'FOSUserBundle') }}</p>
            {% if note %}
            <p>Message:<br />
            {{ note }}
            </p>
            {% endif %}
            
            
            <p style="text-decoration: underline;">{{ url('fenchy_frontend_homepage') }}</p>
            <p style="margin-top:80px; font-size: 12px;">{{ 'email.message.address'|trans({}, 'FOSUserBundle') }}</p>
            <p style="font-size: 12px;">{{ 'invitation.email.message.2'|trans({}, 'FOSUserBundle') }} <a href="{{ url('fenchy_user_unsubscribe') }}/{{ hashed_email }}">{{ 'invitation.email.message.3'|trans({}, 'FOSUserBundle') }}</a></p>
        </center>
    </body>
</html>
{% endblock %}